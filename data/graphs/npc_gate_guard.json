{
  "id": "npc_gate_guard",
  "name": "Gate Guard",
  "layout": "visual_novel",
  "portrait": "NPC_Geraldo",
  "initialNode": "default_router",
  "nodes": {
    "default_router": {
      "type": "ROUTER",
      "branches": [
        { "condition": "questStatus:final_seal:completed", "target": "endgame_complete_text" },
        { "condition": "questStatus:final_seal:active", "target": "quest_final_active_text" },
        { "condition": "questStatus:geraldo_vigil:completed", "target": "vigil_complete_router" },
        { "condition": "questStatus:geraldo_vigil:active", "target": "quest_vigil_active" },
        { "condition": "hasItem:guild_pass", "target": "allow_pass_router" }
      ],
      "next": "deny_pass_text"
    },

    "vigil_complete_router": {
      "type": "ROUTER",
      "branches": [
         { "condition": "floor:>14", "target": "quest_offer_final" },
         { "condition": "questStatus:silent_shipment:active", "target": "quest_shipment_router" },
         { "condition": "questStatus:silent_shipment:completed", "target": "allow_pass_text" }
      ],
      "next": "allow_pass_text"
    },

    "allow_pass_router": {
       "type": "ROUTER",
       "branches": [
         { "condition": "questStatus:geraldo_vigil:inactive", "target": "quest_offer_vigil" },
         { "condition": "questStatus:silent_shipment:active", "target": "quest_shipment_router" }
       ],
       "next": "allow_pass_text"
    },

    "quest_shipment_router": {
      "type": "ROUTER",
      "condition": "flag:shipment_investigated",
      "trueNode": "quest_turn_in_text",
      "falseNode": "quest_reminder_text"
    },

    "deny_pass_text": {
      "type": "TEXT",
      "content": "No Guild Pass. Speak to the Guildmaster in town. And don’t try to slip past. I’ve buried faster people than you.",
      "next": "deny_pass_choices"
    },
    "deny_pass_choices": {
      "type": "CHOICE",
      "options": [
        { "label": "Anything strange happening?", "target": "quest_offer_text", "condition": "questStatus:silent_shipment:inactive" },
        { "label": "Leave", "action": "close" }
      ]
    },

    "quest_offer_text": {
      "type": "TEXT",
      "content": "Strange? Always. But the supply shipment is late. Very late. It usually comes through the old tunnel, but it's silent.",
      "next": "quest_offer_choice"
    },
    "quest_offer_choice": {
      "type": "CHOICE",
      "options": [
        { "label": "I'll investigate.", "target": "action_offer_quest" },
        { "label": "Not my problem.", "action": "close" }
      ]
    },
    "action_offer_quest": {
      "type": "ACTION",
      "action": "OFFER_QUEST",
      "questId": "silent_shipment",
      "next": "close_choice"
    },

    "quest_reminder_text": {
      "type": "TEXT",
      "content": "Any news on the shipment? Ask Alicia, she usually hears the carts coming.",
      "next": "close_choice"
    },

    "quest_turn_in_text": {
      "type": "TEXT",
      "content": "So Alicia heard them stop near the chasm? Damn. That means goblins or worse. Thanks for the intel. I'll double the watch.",
      "next": "quest_complete_action"
    },
    "quest_complete_action": {
      "type": "ACTION",
      "action": "COMPLETE_QUEST",
      "questId": "silent_shipment",
      "next": "quest_complete_text"
    },
    "quest_complete_text": {
      "type": "TEXT",
      "content": "You did good work. Watch your back out there.",
      "next": "allow_pass_choices"
    },

    "allow_pass_text": {
      "type": "TEXT",
      "content": "Guild Pass verified. Keep your MP above the red line. Don’t be a hero in there— heroes become stains.",
      "next": "allow_pass_choices"
    },
    "allow_pass_choices": {
      "type": "CHOICE",
      "options": [
        { "label": "Enter Dungeon", "target": "action_teleport" },
        { "label": "Ask about stains.", "target": "allow_pass_stains_text" },
        { "label": "Anything strange?", "target": "quest_offer_text", "condition": "questStatus:silent_shipment:inactive" },
        { "label": "Leave", "action": "close" }
      ]
    },
    "action_teleport": {
      "type": "ACTION",
      "action": "TRAVEL",
      "floorIndex": 1
    },
    "allow_pass_stains_text": {
      "type": "TEXT",
      "content": "People come back talking about ‘treasure’. Then they stop sleeping. Then they stop talking. Then we stop calling them by name. Go.",
      "next": "allow_pass_stains_choices"
    },
    "allow_pass_stains_choices": {
      "type": "CHOICE",
      "options": [
        { "label": "Enter Dungeon", "target": "action_teleport" },
        { "label": "Leave", "action": "close" }
      ]
    },

    "quest_offer_vigil": {
      "type": "TEXT",
      "content": "Hold up. The first floor is swarming with Skeletons today. I need to clear them out before they push up to the gate. You want to earn your keep?",
      "next": "quest_vigil_choices"
    },
    "quest_vigil_choices": {
      "type": "CHOICE",
      "options": [
        { "label": "I'll handle it.", "target": "action_offer_vigil" },
        { "label": "Not right now.", "target": "allow_pass_text" }
      ]
    },
    "action_offer_vigil": {
      "type": "ACTION",
      "action": "OFFER_QUEST",
      "questId": "geraldo_vigil",
      "acceptNode": "quest_vigil_active",
      "declineNode": "allow_pass_text"
    },
    "quest_vigil_active": {
      "type": "ROUTER",
      "condition": "kills:skeleton:5",
      "trueNode": "quest_vigil_turnin",
      "falseNode": "quest_vigil_reminder"
    },
    "quest_vigil_reminder": {
      "type": "TEXT",
      "content": "Five skeletons. Don't come back until they're dust. Well, more dust.",
      "next": "allow_pass_choices"
    },
    "quest_vigil_turnin": {
      "type": "TEXT",
      "content": "Not bad. You move well. Maybe you won't end up as a stain after all. Here.",
      "next": "quest_vigil_complete_action"
    },
    "quest_vigil_complete_action": {
      "type": "ACTION",
      "action": "COMPLETE_QUEST",
      "questId": "geraldo_vigil",
      "completeNode": "allow_pass_text"
    },

    "quest_offer_final": {
      "type": "ROUTER",
      "condition": "questStatus:final_seal:inactive",
      "trueNode": "quest_final_start_text",
      "falseNode": "allow_pass_text"
    },
    "quest_final_start_text": {
      "type": "TEXT",
      "content": "Summoner. We have a situation. The void isn't just leaking anymore. It's pouring. The source has been located at the very bottom. Floor 15. The 'Avatar of Zero'.",
      "next": "quest_final_choices"
    },
    "quest_final_choices": {
      "type": "CHOICE",
      "options": [
        { "label": "I'm ready.", "target": "action_offer_final" },
        { "label": "I need to prepare.", "target": "allow_pass_text" }
      ]
    },
    "action_offer_final": {
      "type": "ACTION",
      "action": "OFFER_QUEST",
      "questId": "final_seal",
      "acceptNode": "quest_final_active_text",
      "declineNode": "allow_pass_text"
    },
    "quest_final_active_text": {
      "type": "ROUTER",
      "condition": "kills:avatar_of_zero:1",
      "trueNode": "quest_final_turnin",
      "falseNode": "quest_final_reminder"
    },
    "quest_final_reminder": {
      "type": "TEXT",
      "content": "This is it. If you don't stop it, there won't be a Stillnight left to come back to. Go.",
      "next": "allow_pass_choices"
    },
    "quest_final_turnin": {
      "type": "TEXT",
      "content": "The shaking stopped. The sky... it looks clearer. You did it. I didn't think anyone could. I... thank you.",
      "next": "quest_final_complete_action"
    },
    "quest_final_complete_action": {
      "type": "ACTION",
      "action": "COMPLETE_QUEST",
      "questId": "final_seal",
      "completeNode": "endgame_complete_text"
    },
    "endgame_complete_text": {
      "type": "TEXT",
      "content": "You're a legend now. Try not to let it go to your head. The gate is open for you, always.",
      "next": "allow_pass_choices"
    },

    "close_choice": {
        "type": "CHOICE",
        "options": [
            { "label": "Leave", "action": "close" }
        ]
    }
  }
}

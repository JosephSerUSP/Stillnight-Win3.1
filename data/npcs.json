  "npc_geraldo": {
    "name": "Geraldo",
    "portrait": "NPC_Geraldo",
    "initialState": "default",
    "states": {
      "default": {
        "text": "Welcome to the Auction House. We deal in rarities. Do you have the coin, or are you wasting my time?",
        "choices": [
          { "label": "Shop", "action": "shop", "shopId": "auction_house" },
          { "label": "Talk", "nextState": "talk" },
          { "label": "Leave", "action": "close" }
        ]

{
  "npc_alicia": {
    "name": "Alicia",
    "portrait": "NPC_Alicia",
    "initialState": "default",
    "states": {
      "default": {
        "text": "Oh, hi! I'm Alicia. I run the consumables shop. Do you need any potions?",
